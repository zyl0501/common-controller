<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/style_wrap"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            style="@style/style_wrap"
            android:src="@drawable/img_update_head"/>

        <LinearLayout
            android:id="@+id/ll_content"
            style="@style/style_wrap"
            android:layout_alignLeft="@id/iv_head"
            android:layout_alignRight="@id/iv_head"
            android:layout_below="@id/iv_head"
            android:background="@drawable/white_bg_bottom_radius_4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="发现新版本"
                android:textColor="#333"
                android:textSize="18sp"/>

            <!--确定-->
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:textColor="#666"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/select_btn_bluebg_redius_36"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@android:color/white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="忽略此版本"
                android:textColor="#666"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            style="@style/style_wrap"
            android:layout_below="@id/ll_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_update_close"/>
    </RelativeLayout>

</RelativeLayout>